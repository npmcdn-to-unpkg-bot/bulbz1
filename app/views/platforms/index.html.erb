
<div class="">

<div class="grid">
<div class="grid-sizer"></div>
<% @platforms.reverse.each do |platform| %>
    <div class="grid-item">

      <% if platform.picture != nil %>
      <div class="row bulb_hl">
        <img src="<%= platform.picture %>" width="100%">
      </div>
      <% end %>

      <div class="row bulb_hl" style="padding-top: 0px; padding-bottom: 0px">
        <div class="col-xs-12" style="padding: 0px;">
          <h4 style="margin-bottom: 0px;" class="index_mega"><span style="width: 100%"><%= platform.title %></span></h4>
<!--           <img src="http://40.media.tumblr.com/4acc2a446cc63f3a52353a6c673391b1/tumblr_nm6y9hzrla1roigg6o1_1280.png" width="100%" style="margin-bottom: 20px;"> -->
        </div>
      </div>

      <div class="row bulb_hl" style="padding-top: 0px">
          <div class="col-xs-3" style="padding-left: 0px;">
            <h4 style="margin-bottom: 0px; padding-top: 30px;">is a</h4>
          </div>
          <div class="col-xs-9" style="padding-left: 0px; padding-right: 0px;">
            <h4 style="margin-bottom: 0px; margin-top: 20px;" class="index_mega_color_platform"><span>PLATFORM</span></h4>
          </div>
      </div>

      <div class="row bulb_hl" style="padding-top: 0px; padding-bottom: 0px">
        <h4 style="margin-bottom: 20px; padding-top: 0px; margin-top: 0px">that connects</h4>
        <h4 class="index_mega"><span ><%= platform.target1 %></span></h4>
        <h4 style="margin-bottom: 20px; padding-top: 10px; margin-top: 0px">and</h4>
        <h4 class="index_mega" style="margin: 20px 0px 0px 0px;"><%= platform.target2 %></h4>
      </div>


    </div>
<% end %>


</div>


</div>



<div class="fut" style="display: none">

<p id="notice"><%= notice %></p>

<h1>Listing Platforms</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Target1</th>
      <th>Target2</th>
      <th>Description</th>
      <th>Gain1</th>
      <th>Gain2</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.title %></td>
        <td><%= platform.target1 %></td>
        <td><%= platform.target2 %></td>
        <td><%= platform.description %></td>
        <td><%= platform.gain1 %></td>
        <td><%= platform.gain2 %></td>
        <td><%= platform.picture %></td>
        <td><%= link_to 'Show', platform %></td>
        <td><%= link_to 'Edit', edit_platform_path(platform) %></td>
        <td><%= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Platform', new_platform_path %>
</div>
