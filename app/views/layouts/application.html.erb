                    <a href="#">Your public blbz</a>
                </li>
                                <li style="">
                    <a href="#">Your private blbz</a>
                </li>

                <li style="">
                  <%= link_to 'New Bulb', new_bulb_path %>
                </li>

                <li style="">
                  <%= link_to 'New App', new_app_path %>
                </li>

                <li style="">
                  <%= link_to 'New Platform', new_platform_path %>
                </li>
                <li style="">
                  <%= link_to 'New Service', new_service_path %>
                </li>
                                <li style="">
                  <%= link_to 'New Shop', new_shop_path %>
                </li>

                <li>
                <% if current_user %>
                  <div class="row">
                    <div class="col-sm-12">
                      <%= current_user.name %>
                      <%= link_to "Sign Out", signout_path %>
                    </div>
                  </div>

                  <% else %>
                    <%= link_to "Sign in with Facebook", "/auth/facebook" %>
                  <% end %>
                </li>

            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
