<body>

<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav" style="padding: 50px 10px 20px 10px;">
              <li>
                <% if current_user.present? %>
                  <img class = "img img-circle" src="<%= current_user.profile_picture %>" style="width: 30%">
                <% else %>
                  <img class = "img img-circle" src="https://s3.eu-central-1.amazonaws.com/mybulbz/icons/bulb1_round.png" style="width: 30%">
                <% end %>
              </li>
                <li class="sidebar-brand" style="text-align: center; padding: 50px 0px 50px 0px">
