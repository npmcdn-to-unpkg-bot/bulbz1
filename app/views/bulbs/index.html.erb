
<div class="">

<div class="grid">
<div class="grid-sizer"></div>
<% @bulbs.reverse.each do |bulb| %>
    <div class="grid-item">

      <% if bulb.picture != nil %>
      <div class="row bulb_hl">
        <img src="<%= bulb.picture %>" width="100%">
      </div>
      <% end %>

      <div class="row bulb_hl">
        <div class="col-xs-2">
          <% if bulb.art == "App" %>
          <h4 style="margin-bottom: 35px; padding-top: 15px;">An</h4>
          <% else %>
          <h4 style="margin-bottom: 35px; padding-top: 15px;">A</h4>
          <% end %>
          <h4 style="margin-bottom: 35px; padding-top: 15px;">for</h4>
          <h4 style="margin-bottom: 35px; padding-top: 15px;">who</h4>
        </div>
        <div class="col-xs-10">
          <h4 style="margin-bottom: 35px;"><span class="index_mega"><%= bulb.art %></span></h4>
          <h4 style="margin-bottom: 35px;"><span class="index_mega_color"> <%= bulb.target %></span></h4>
          <h4 style="margin-bottom: 35px;"><span class="index_mega"> <%= bulb.verb %></span></h4>
        </div>
      </div>
      <div class="row bulb_hl" style="padding-top: 0px; margin-top: -20px;">
        <h4><span class="index_mega2"> <%= bulb.need %></span></h4>
      </div>
    </div>
<% end %>


</div>


</div>







<div class="fut" style="display: none">

<p id="notice"><%= notice %></p>



<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>What</th>
      <th>Forwhom</th>
      <th>Why</th>
      <th>Need</th>
      <th>Category</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bulbs.each do |bulb| %>
      <tr>
        <td><%= bulb.user_id %></td>
        <td><%= bulb.title %></td>
        <td><%= bulb.what %></td>
        <td><%= bulb.forwhom %></td>
        <td><%= bulb.why %></td>
        <td><%= bulb.need %></td>
        <td><%= bulb.category %></td>
        <td><%= bulb.private %></td>
        <td><%= link_to 'Show', bulb %></td>
        <td><%= link_to 'Edit', edit_bulb_path(bulb) %></td>
        <td><%= link_to 'Destroy', bulb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>




